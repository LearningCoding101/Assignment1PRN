<Window x:Class="FUMiniHotelSystem.viewModel.admin.booking.ViewBookingDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelSystem.viewModel.admin.booking"
        mc:Ignorable="d"
        Title="ViewBookingDetail" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Booking ID:"/>
            <TextBox x:Name="BookingIdTextBox" Width="300" IsReadOnly="True"/>
            <Label Content="Booking Date:"/>
            <DatePicker x:Name="BookingDatePicker" Width="300"/>
            <Label Content="Total Price:"/>
            <TextBox x:Name="TotalPriceTextBox" Width="300"/>
            <Label Content="Customer ID:"/>
            <TextBox x:Name="CustomerIdTextBox" Width="300"/>

            <Label Content="Start Date Time:" Margin="0,20,0,0"/>
            <DatePicker x:Name="StartDatePicker" Width="300"/>
            <Label Content="End Date Time:"/>
            <DatePicker x:Name="EndDatePicker" Width="300"/>
            <Label Content="Actual Price:"/>
            <TextBox x:Name="ActualPriceTextBox" Width="300"/>

        </StackPanel>
    </Grid>
</Window>
