<Window x:Class="FUMiniHotelSystem.viewModel.admin.customer.UpdateCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Customer" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Customer Details" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Full Name"/>
            <TextBox x:Name="FullNameTextBox" Width="300" Margin="5"/>

            <TextBlock Text="Phone"/>
            <TextBox x:Name="PhoneTextBox" Width="300" Margin="5"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailTextBox" Width="300" Margin="5"/>

            <TextBlock Text="Birthday"/>
            <TextBox x:Name="BirthdayTextBox" Width="300" Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
